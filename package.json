{
  "name": "status-list-mock",
  "version": "1.0.0",
  "type": "module",
  "engines": {
    "node": "22"
  },
  "scripts": {
    "build": "sam build --template template.yaml",
    "dev": "npm run localstack:up && npm run invoke:JwksFunction && npm run start:api",
    "format": "./node_modules/.bin/prettier --write '**/*.ts' 'api-spec.yaml'",
    "lint": "./node_modules/.bin/eslint ./src/functions",
    "format:check": "./node_modules/.bin/prettier --check '**/*.ts'",
    "infra:format": "rain fmt --write template.yaml",
    "infra:format:check": "rain fmt --verify template.yaml",
    "invoke:JwksFunction": "sam local invoke JwksFunction --template .aws-sam/build/template.yaml --env-vars .env.json",
    "localstack:down": "docker compose -f localstack/docker-compose.yml down",
    "localstack:up": "docker compose -f localstack/docker-compose.yml up --build -d --wait",
    "start:api": "sam local start-api --template .aws-sam/build/template.yaml --warm-containers EAGER --env-vars .env.json --port 3000",
    "test": "./node_modules/.bin/jest --silent"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/aws-lambda": "^8.10.159",
    "@types/jest": "^30.0.0",
    "aws-sdk-client-mock": "^4.1.0",
    "aws-sdk-client-mock-jest": "^4.1.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "jest": "^30.2.0",
    "jest-junit": "^16.0.0",
    "prettier": "^3.7.4",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.51.0"
  },
  "dependencies": {
    "@aws-lambda-powertools/logger": "^2.30.0",
    "@aws-sdk/client-kms": "^3.962.0",
    "@aws-sdk/client-s3": "^3.962.0",
    "ecdsa-sig-formatter": "^1.0.11",
    "esbuild": "^0.27.2",
    "tsc": "^2.0.4"
  }
}
